<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".indefinidas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/uno" />

                <ImageView
                    android:id="@+id/flechacha"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:src="@drawable/exit" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="Salir"
                    android:textColor="#FAFAFA"
                    android:textSize="20sp"
                    android:layout_gravity="right"
                    android:layout_marginTop="50dp"/>

                <ImageView
                    android:id="@+id/casasa"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:src="@drawable/home" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="Menu"
                    android:textColor="#FAFAFA"
                    android:textSize="20sp"
                    android:layout_gravity="left"
                    android:layout_marginTop="50dp"/>

            </FrameLayout>

        </android.support.v7.widget.Toolbar><!-- FIN BARRA-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INTEGRALES INDEFINIDAS"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:src="@drawable/s"
                android:layout_marginStart="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coeficiente"
                android:layout_gravity="left|bottom"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="10dp"
                android:textSize="11sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:text="Potencia"
                android:textSize="11sp"
                android:layout_marginEnd="105dp"/>

            <EditText
                android:id="@+id/et_coeficiente"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:hint=""
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="50sp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X^"
                android:textSize="50sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/et_potencia"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="number"
                android:textAlignment="center"
                android:layout_gravity="right"
                android:textSize="25sp"
                android:layout_marginEnd="115dp"
                android:layout_marginTop="5dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese un posible resultado"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/resIntInd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ejemplo: 2x^2"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <TextView
                android:id="@+id/tv_resultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:hint="Resultado"
                android:textSize="40sp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/btn_calculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:text="Calcular"
                android:textColor="#FAFAFA"
                android:textSize="20sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"/>
        </FrameLayout>

    </LinearLayout>

</ScrollView>